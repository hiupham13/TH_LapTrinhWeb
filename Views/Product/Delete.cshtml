@model Week2_PhamHoangPhiHieu.Models.Product

<div class="container my-5">
    <h2 class="text-center mb-5 animate__animated animate__fadeInDown" style="color: #2c3e50; font-weight: 700;">Xóa sản phẩm</h2>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h4 class="mb-4">Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
                    <p class="text-muted">Tên sản phẩm: <strong>@Model.Name</strong></p>
                    <p class="text-muted">Giá: <strong>@Model.Price.ToString("N0") VNĐ</strong></p>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-center">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>